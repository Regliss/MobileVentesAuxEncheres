<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DetailActivity">

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre: "
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textViewTitleProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:fontFamily="sans-serif"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textViewDescriptionProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Desription"
            android:fontFamily="sans-serif"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix: "
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textViewPriceProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Price"
            android:fontFamily="sans-serif"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Début: "
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textViewDateDebut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="date"
            android:fontFamily="sans-serif"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Fin: "
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textViewDateFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="date"
            android:fontFamily="sans-serif"
            />

    </LinearLayout>

    <Button
        android:onClick="submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Ajouter à mes Produits"
        android:background="@drawable/shape_button" />

    <Button
        android:onClick="updateBid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Enchérir"
        android:background="@drawable/shape_button" />




</LinearLayout>